<% notifications.each do |notification| %>
  <div>
    <% if notification.visiter.name != current_user.name %>
      <%= link_to user_path(notification.visiter) do %>
        <%= attachment_image_tag notification.visiter, :profile_image, :fill,100,100, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class:"profile-img-circle" %>
      <% end %>
      <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span><br>
      <% if !@comment.nil? %>
        <p class="offset-2 text-secondary"><%= @comment.comment %></p>
      <% end %>
    <% end %>
  </div>
<% end %>

