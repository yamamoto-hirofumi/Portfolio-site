  <div class="offset-9">
    <%= render "posts/sort_form", post: @post %>
  </div>
  <div class="container">
  <% if @keyword.present? %>
    <h2 class="text-center p-3"><span class="text-primary m-2"><%= @keyword %></span>に関する投稿</h2>
  <% elsif @sort_keyword %>
    <h2 class="text-center p-3"><%= sort_selection %></h2>
  <% else %>
    <h2 class="text-center p-3">投稿一覧</h2>
  <% end %>
  <div class="row">
    <div class="col-2">
      <%= render 'posts/tag', tags: @tag_ranks %>
    </div>
    <div class="col-10">
      <%= render "posts/index", posts: @posts %>
    </div>
  </div>
</div>