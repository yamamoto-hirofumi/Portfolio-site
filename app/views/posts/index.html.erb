<div class="offset-9">
  <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
    <%= f.text_field :keyword, placeholder: "投稿Title" %>
    <%= f.submit "検索", class: "btn btn-sm btn-success" %>
  <% end %>
</div>
<div class="container">
  <h2 class="text-center p-3">投稿一覧</h2>
  <%= render "posts/index", posts: @posts %>
</div>